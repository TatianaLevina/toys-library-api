    "/slug": {
      "get": {
        "tags": [
          "sections"
        ],
        "summary": "Метод получения контента раздела сайта",
        "operationId": "getSectionBySlug",
        "responses": {
          "200": {
            "description": "Успешное получение данных",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Section"
                }
              }
            }
          },
          "default": {
            "description": "Все ошибки",
            "content": {
              "application/json": {
