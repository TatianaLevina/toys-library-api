      }
    },
    "/sections": {
      "get": {
        "tags": [
          "sections"
        ],
        "summary": "Метод получения контента всех разделов сайта",
        "operationId": "getSections",
        "responses": {
          "200": {
            "description": "Успешное получение данных",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Sections"
                }
              }
            }
          },
          "default": {
            "description": "Все ошибки",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/gallery": {
      "get": {
        "tags": [
          "gallery"
        ],
        "summary": "Метод получения изображений для галерии",
        "operationId": "getGallery",
        "responses": {
          "200": {
            "description": "Успешное получение данных",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Images"
                }
              }
            }
          },
          "default": {
            "description": "Все ошибки",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "OffsetParam": {
        "in": "query",
        "name": "offset",
        "required": false,
        "schema": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "description": "Количество пропускаемых записей"
      },
      "LimitParam": {
        "in": "query",
        "name": "limit",
        "required": true,
        "schema": {
          "type": "integer",
          "minimum": 1,
          "default": 10
        },
        "description": "Количество запрашиваемых записей"
      },
      "slug": {
        "in": "path",
        "name": "slug",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    },
    "schemas": {
      "MasterClass": {
        "type": "object",
        "properties": {
          "idMasterClass": {
            "type": "integer",
            "example": 10
          },
          "name": {
            "type": "string",
            "example": "Мыловарение"
          },
          "shortDescription": {
            "type": "string",
            "example": "Здесь короткое описание МК Мыловарения"
          },
          "description": {
            "type": "string",
            "example": "Здесь будет текст описывающий МК Мыловарения"
          },
          "price": {
            "type": "number",
            "example": 1990
          },
          "startDate": {
            "type": "string",
            "format": "date",
            "example": "2011-10-05T14:48:00.000Z"
          },
          "imageUrlMasterClass": {
            "type": "string",
            "example": "http://dummyimage.com/120"
          }
        }
      },
      "MasterClasses": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/MasterClass"
        }
      },
      "Callme": {
        "type": "object",
        "required": [
          "name",
          "phone"
        ],
        "properties": {
          "idCallme": {
            "type": "string",
            "example": "3422b448-2460-4fd2-9183-8000de6f8343"
          },
          "name": {
            "type": "string",
            "example": "Аврора"
          },
          "phone": {
            "type": "string",
            "example": "8-977-777-77-77"
          },
          "email": {
            "type": "string",
            "example": "tryl@email.com"
          },
          "message": {
            "type": "string",
            "example": "Хочу узнать про запись на МК"
          }
        }
      },
      "Feedback": {
        "type": "object",
        "properties": {
          "idFeedback": {
            "type": "integer",
            "example": 8
          },
          "title": {
            "type": "string",
            "example": "Отзывы"
          },
          "subtitle": {
            "type": "string",
            "example": "Мы ценим каждого"
          },
          "imageURLFeedback": {
            "type": "string",
            "example": "http://dummyimage.com/120"
          }
        }
      },
      "Feedbacks": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Feedback"
        }
      },
      "Membership": {
        "type": "object",
        "properties": {
          "idMembership": {
            "type": "integer",
            "example": 0
          },
          "typeMembership": {
            "type": "string",
            "example": "basic",
            "enum": [
              "basic",
              "advanced"
            ]
          },
          "name": {
            "type": "string",
            "example": "Базовый"
          },
          "description": {
            "type": "string",
            "example": "Здесь будет текст описывающий Базовый абонемент"
          },
          "price": {
            "type": "number",
            "example": 590
          }
        }
      },
      "Memberships": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Membership"
        }
      },
      "Employee": {
        "type": "object",
        "properties": {
          "idEmployee": {
            "type": "integer",
            "format": "int64",
            "example": 10
          },
          "lastName": {
            "type": "string",
            "example": "Сергеев"
          },
          "firstName": {
            "type": "string",
            "example": "Иван"
          },
          "patronymic": {
            "type": "string",
            "example": "Петрович"
          },
          "position": {
            "type": "string",
            "example": "Мастер по ремонту игрушек"
          },
          "description": {
            "type": "string",
            "example": "Здесь будет текст про выдающиеся способности мастера по ремонту"
          },
          "avatarUrl": {
            "type": "string",
            "example": "http://dummyimage.com/120"
          }
        }
      },
      "Employees": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Employee"
        }
      },
      "Contact": {
        "type": "object",
        "properties": {
          "idContact": {
            "type": "integer",
            "format": "int32",
            "example": 0
          },
          "phoneNumber": {
            "type": "string",
            "example": "8-977-777-77-77"
          },
          "email": {
            "type": "string",
            "example": "library@email.com"
          },
          "links": {
            "$ref": "#/components/schemas/Links"
          },
          "address": {
            "type": "string",
            "example": "г.Нижний Новгород ул.Котейкино, 23Б"
          },
          "location": {
            "type": "string",
            "example": "https://yandex.ru/maps/47/nizhny-novgorod/house/puteyskaya_ulitsa_23b/YEoYfgFhTUMCQFtsfX54c3xhZw==/?ll=43.861466%2C56.292023&z=17"
          },
          "TimeSchedule": {
            "type": "object",
            "properties": {
              "monday": {
                "type": "string",
                "example": "10:00-20:00"
              },
              "tuesday": {
                "type": "string",
                "example": "10:00-20:00"
              },
              "wednesday": {
                "type": "string",
                "example": "10:00-20:00"
              },
              "thurday": {
                "type": "string",
                "example": "10:00-20:00"
              },
              "friday": {
                "type": "string",
                "example": "10:00-20:00"
              },
              "saturday": {
                "type": "string",
                "example": "10:00-20:00"
              },
              "sunday": {
                "type": "string",
                "example": "10:00-20:00"
              }
            }
          }
        }
      },
      "Links": {
        "properties": {
          "vkLink": {
            "type": "string",
            "example": "https://vk.com/twotoy"
          },
          "telegramLink": {
            "type": "string",
            "example": "https://t.me/username"
          }
        }
      },
      "Contacts": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Contact"
        }
      },
      "Eco": {
        "type": "object",
        "properties": {
          "idParagraph": {
            "type": "integer",
            "example": 0
          },
          "paragraphText": {
            "type": "string",
            "example": "Дадим вторую жизнь вашим игрушкам"
          }
        }
      },
      "EcoContent": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Eco"
        }
      },
      "StartScreen": {
        "type": "object",
        "properties": {
          "slogan": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "Новая игрушка хоть каждый день. Вы можете играть, делиться и меняться игрушками вместе с нами!"
            }
          }
        }
      },
      "Section": {
        "type": "object",
        "properties": {
          "slug": {
            "type": "string",
            "example": "collecting-toys"
          },
          "title": {
            "type": "string",
            "example": "Сбор игрушек"
          },
          "shortDescription": {
            "type": "string",
            "example": "Здесь короткое описание для раздела Сбор игрушек"
          },
          "description": {
            "type": "string",
            "example": "Здесь будет текст для раздела Сбор игрушек"
          },
          "images": {
            "$ref": "#/components/schemas/Images"
          }
        }
      },
      "Images": {
        "type": "array",
        "items": {
          "type": "string",
          "example": "http://dummyimage.com/120"
        }
      },
      "Sections": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Section"
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}